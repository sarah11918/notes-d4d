    }
    .feelback-q {
        
        border: 2px solid black;
        background-color:rgb(212, 244, 244);
    }
    .feelback-container {
        background-color:darkkhaki;
        width: 40vw;
    }
    .feelback-radio-item-wrap {
        background-color:hotpink;
    } */

 </style>

<FeelbackSplitTaggedMessage
    contentSetId={CONTENT_SET_ID}
    withMessage
    tags={{
        y: YES_TAGS,
        n: NO_TAGS
    }}
    titles={{
        y: "What did you like?",
        n: "What we should improve?",
    }}
/>